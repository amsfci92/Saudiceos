@using Cigarette.Enterprise.ResourceManager.LanguagesResourceFiles
@using Cigarette.Enterprise.ViewModels.ViewModels.AdminViewModels.Country
@model Saudiceos.Enterprise.Web.Models.ForgotPasswordVM

@{
    ViewBag.Title = "ForgotPassword";

    var language = "ar";
    var cookie = HttpContext.Current.Request.Cookies["Language"];

    if (cookie != null && cookie.Value != null)
    {
        language = cookie.Value;
    }
    else
    {
        HttpCookie newcookie = new HttpCookie("Language");
        newcookie.Value = language;
        Response.Cookies.Add(newcookie);
    }
    var countries = (List<CountryListItemViewModel>)ViewBag.Countries;
    var isEnglishLang = language != "ar";

    var country = "KW";
    var cookiecountry = HttpContext.Current.Request.Cookies["Country"];

    if (cookiecountry != null && cookiecountry.Value != null)
    {
        country = cookiecountry.Value;
    }
    else
    {
        HttpCookie newcookiecountry = new HttpCookie("Country");
        newcookiecountry.Value = language;
        Response.Cookies.Add(newcookiecountry);
    }
}

@if (isEnglishLang)
{
    <style type="text/css">
        label {
            text-align: left;
            width: 100%;
        }
    </style>
}




@if (language == "ar")
{
    <section class="mainContent  text-center">
        <h1 class="headerPages">
            نسيت كلمة المرور
        </h1>
        <div class="ForgetContent">
            من فضلك ادخل رقم الهاتف لاعادة تعيين كلمة السر
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">

                </div>
                <div class="col-md-4">
                    <form class="" action="/ForgetPasswordPost" method="post">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.Phone) })
                            @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
                            <div class="text-danger">@(ViewBag.Message != null?ViewBag.Message: "")</div>
                        </div>
                        <div style="margin-bottom:50px;">
                            <button type="submit" class="btn forgetBtn">
                                إرسال
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-md-4">

                </div>
            </div>
        </div>
    </section>
}
else
{
    <!-- about us Section -->
    <section class="mainContent  text-center">
        <h1 class="headerPages">
            Forget Password
        </h1>
        <div class="ForgetContent">
            Please insert the phone number to reset the password
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">

                </div>
                <div class="col-md-4">
                    <form class="" action="/ForgetPasswordPost" method="post">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.Phone) })
                            @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
                            <div class="text-danger">@(ViewBag.Message != null ? ViewBag.Message : "")</div>
                        </div>
                        <div style="margin-bottom:50px;">
                            <button type="submit" class="btn forgetBtn">
                                Send
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-md-4">

                </div>
            </div>
        </div>
    </section>

    <!-- about us Section End -->
}
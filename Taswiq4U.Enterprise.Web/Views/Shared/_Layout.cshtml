    $(".add-fav-btn").click(function () {
        var btn = $(this);
        btn.prop('disabled', true);
        var auth = @(User.Identity.IsAuthenticated ? "true" : "false");
       // if (auth) {
            $.ajax({
                type: "post",
                url: '@Url.RouteUrl("AddAndRemoveFavorites")?addvertisementId=' + btn.attr('data-adId'),

@using Cigarette.Enterprise.ViewModels.Pagination
@{
    /**/

    ViewBag.Title = "Profile";



    var language = "ar";
    var cookie = HttpContext.Current.Request.Cookies["Language"];

    if (cookie != null && cookie.Value != null)
    {
        language = cookie.Value;
    }
    else
    {
        HttpCookie newcookie = new HttpCookie("Language");
        newcookie.Value = language;
        Response.Cookies.Add(newcookie);
    }
}


@if (language == "ar")
{

    <!-- dashboard  Section -->

    <section class="mainContent dashboard">
        <div class="container">
            <div class="profileImg text-center">
                <img class="img-fluid" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTynSetkTudpJGPUFVGN6yT5jNS7D8JLD2bOBj6HqiYKlJ6QhKR" alt="">
            </div>
            <div class="profileName text-center">
                @ViewBag.UserName
            </div>
            <div class="profileTabs text-center">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">الإعلانات</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">البيانات</a>
                    </li>
                </ul>
            </div>
            <div class="profileS">
                <div class="tab-content" id="myTabContent">
                    @Html.Action("UserProfileAdvertisement", "Advertisement", new { Page = ((PagingParams)ViewBag.pagingParams).Page, Size = ((PagingParams)ViewBag.pagingParams).Size , language = language, country = ViewBag.Country})

                  
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">

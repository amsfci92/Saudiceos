                                    <span class="fas fa-phone"></span> <span class="proText"> رصيد الإعلانات المجانية: @ViewBag.FreeAdsCount </span>
                                </div>
                                <div class="profileDetails">
                                    <span class="fas fa-map"></span> <span class="proText">@ViewBag.Address </span>
                                </div>
                                <div class="profileDetails">
                                    <span class="proText">
                                        <a href="@Url.RouteUrl("ContactUs", new { language = language, country = ViewBag.Country})" class="btn SendMsg">ارسال رسالة</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>


        </div>
    </section>
    <!-- dashboard  Section End -->
}

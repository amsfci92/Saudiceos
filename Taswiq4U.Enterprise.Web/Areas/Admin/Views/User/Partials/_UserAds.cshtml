@model IEnumerable<Cigarette.Enterprise.ViewModels.ViewModels.CommercialAd.CommercialAdsUserVM>
@using Cigarette.Enterprise.DAL.Repository.CommercialAdsRep
@using Cigarette.Enterprise.ResourceManager.LanguagesResourceFiles

<table class="table table-striped table-bordered table-hover" width="100%" id="sample_Ads" style="width: 100%;">
    <thead>
        <tr role="row">
            <th>@HomeResource.AdsDescription</th>
            <th>@HomeResource.AdsType</th>
            <th>@HomeResource.AdsLink</th>
            <th>*</th>
            <th>*</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var ad in Model)
        {
            <tr role="row" class="odd">
                <td>@ad.ComercialAd.Description</td>
                <td>@((CommercialAdType)ad.ComercialAd.Type)</td>
                <td>@ad.ComercialAd.Link</td>
                <td>
                    <a href="/Admin/Ads/@ad.CommercialAdId" class="btn btn-info btn-sm">
                        <i class="fa fa-info"></i>
                    </a>
                </td>
                <td>
                    @if (ad.Active == true)
                    {
                        <a href="/Admin/Ads/@ad.CommercialAdId" class="btn btn-danger btn-sm">
                            @HomeResource.AdminBundleDeActivate
                        </a>
                    }
                    else { }
                </td>
            </tr>
        }
    </tbody>
</table>
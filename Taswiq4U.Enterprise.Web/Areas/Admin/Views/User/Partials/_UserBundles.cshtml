@model IEnumerable<Cigarette.Enterprise.ViewModels.ViewModels.UserBundle.UserBundleVM>
@using Cigarette.Enterprise.ResourceManager.LanguagesResourceFiles

<table class="table table-striped table-bordered table-hover" width="100%" id="sample_Bun" style="width: 100%;">
    <thead>
        <tr role="row">
            <th>@HomeResource.AdminNewBundleTitle</th>
            <th>@HomeResource.AdminNewBundleAdsCount</th>
            <th>@HomeResource.AdsStartDate</th>
            <th> @HomeResource.AdsEndDate</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var ad in Model)
        {
            <tr role="row" class="odd">
                <td>@ad.Bundle.ArabicName</td>
                <td>@ad.AvailableAds</td>
                <td>@ad.StartDate</td>
                <td>@ad.EndDate</td>

            </tr>
        }
    </tbody>
</table>
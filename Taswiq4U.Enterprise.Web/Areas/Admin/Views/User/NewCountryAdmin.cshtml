@using (Html.BeginForm("NewCountryAdminPost", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.IsAdd)
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.IsActive)
    <input type="hidden" name="countryId" value="@ViewBag.countryId" />
    <div class="portlet box white">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>  Admin Data
            </div>
            <div class="tools">
                <button id="btn_submit" class="btn btn-primary btn-sm" type="submit"><i class="icon-check"></i> @HomeResource.AdminNewCitySubmit</button>
            </div>
        </div>
        <div class="portlet-body" style="display: block;margin-top:5px;">

            <div class="form-horizontal">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">First Name</label>

                    <div class="col-md-8">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">Last Name</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">Email</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">Phone</label>
                    <div class="col-md-8">

                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">UserName</label>
                    <div class="col-md-8">
                        @if (Model.IsAdd)
                        {
                            <input name="UserName" id="UserName" value="" class="form-control" />
                        }
                        else
                        {
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        }
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">Password</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>
    </div>
}

                    <div class="d-flex flex-column flex-grow-1 pe-8">
                        <!--begin::Stats-->
                        <div class="d-flex flex-wrap">
                            <!--begin::Stat-->
                            <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                                <!--begin::Number-->
                                <div class="d-flex align-items-center"> 
                                    <div class="fs-2 fw-bolder" data-kt-countup="true" data-kt-countup-value="@(Model.Views == null?"0":Model.Views.ToString())">0</div>
                                </div>
                                <!--end::Number-->
                                <!--begin::Label-->
                                <div class="fw-bold fs-6 text-gray-400">عدد المشاهدات</div>
                                <!--end::Label-->
                            </div>
                            <!--end::Stat-->
                            <!--begin::Stat-->
                            <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                                @if (Model.Twitter != null)
                                {
                                    <a href="@Model.Twitter" class="btn btn-sm btn-light-primary me-3">تويتر</a>
                                }
                              
                                @if (Model.LinkedIn != null)
                                {
                                    <a href="@Model.LinkedIn" class="btn btn-sm  btn-light-primary me-3">لينكيد ان</a>
                                }




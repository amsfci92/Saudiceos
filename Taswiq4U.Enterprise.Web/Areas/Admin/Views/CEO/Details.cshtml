                            <span class="fw-bold fs-6 text-gray-400">نسبه اكتمال البيانات</span>
                            <span class="fw-bolder fs-6">@($"{Model.GetCompletionPercentage()}")%</span>
                        </div>
                        <div class="h-5px mx-3 w-100 bg-light mb-3">
                            <div class="bg-success rounded h-5px" role="progressbar" style="width: @($"{Model.GetCompletionPercentage()}")%;" aria-valuenow="@($"{Model.GetCompletionPercentage()}")" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <!--end::Progress-->
                </div>
                <!--end::Stats-->
            </div>

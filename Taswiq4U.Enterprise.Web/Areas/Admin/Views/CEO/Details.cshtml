                    <div class="d-flex flex-column">
                        <!--begin::Name-->
                        <div class="d-flex align-items-center mb-2">
                            <a  class="text-gray-900 text-hover-primary fs-2 fw-bolder me-1">@Model.Name 
                            @if (Model.Active != null)
                            {
                                <span class="badge @(Model.Active == true ? "badge-success" : "badge-danger" ) fw-bolder my-2">@(Model.Active == true ? "معروض" : "غير معروض")</span>
                            }
                            </a> 
                        </div>
                        <!--end::Name-->
                        <!--begin::Info-->

                                    </svg>
                                </span>
                                <!--end::Svg Icon-->@Model.Email
                            </a>
                        </div>
                        <!--end::Info-->
                    </div>
                    <!--end::User-->
                    <!--begin::Actions-->
                    <div class="d-flex my-4">
                        @if (User.IsRolesAny(Permissions.CEO_Update))
                        {

                            <a href="/admin/ceo/edit/@General.Base64Encode($"{Model.Id}")" class="btn btn-primary me-3">تعديل</a>
                        }
                        </div>
                    <!--end::Actions-->
                </div>
                <!--end::Title-->
                <!--begin::Stats-->
                <div class="d-flex flex-wrap flex-stack">

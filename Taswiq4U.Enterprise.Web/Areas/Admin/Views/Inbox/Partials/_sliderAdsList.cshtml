@model IEnumerable<Cigarette.Enterprise.ViewModels.ViewModels.CommercialAd.CommercialAdVM>
@using Cigarette.Enterprise.ResourceManager.LanguagesResourceFiles


<table class="table table-striped table-bordered table-hover dt-responsive dataTable no-footer dtr-inline" width="100%" id="sample_4" cellspacing="0" role="grid" aria-describedby="sample_3_info" style="width: 100%;">
    <thead>
        <tr role="row">
            <th class="all sorting_asc" tabindex="0" aria-controls="sample_3" rowspan="1" colspan="1" aria-sort="ascending" aria-label="First name: activate to sort column descending">@HomeResource.AdminNewSpecificationID</th>
            <th class="min-phone-l sorting" tabindex="0" aria-controls="sample_3" rowspan="1" colspan="1" aria-label="Last name: activate to sort column ascending">@HomeResource.AdminAdsDescription</th>
            <th class="min-tablet sorting" tabindex="0" aria-controls="sample_3" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">@HomeResource.AdminAdsLink</th>
            <th class="min-tablet sorting" tabindex="0" aria-controls="sample_3" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">@HomeResource.AdminAdsNotification</th>
            <th class=" sorting" tabindex="0" aria-controls="sample_3" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending">*</th>
            <th class=" sorting" tabindex="0" aria-controls="sample_3" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending">*</th>
            <th class=" sorting" tabindex="0" aria-controls="sample_3" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending">*</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var ad in Model.ToList())
        {
            <tr role="row" class="odd">
                <td class="sorting_1" tabindex="0">@ad.Id</td>
                <td>@ad.Description</td>
                <td>@ad.Link</td>
                <td>@ad.Notification</td>
                <td>
                    <a href="/Admin/Category/EditCat/@ad.Id" class="btn btn-primary btn-sm">
                        @HomeResource.EditButtonTitle

                    </a>
                </td>
                <td>
                    <a href="/Admin/Category/@ad.Id" class="btn btn-success btn-sm">
                        @HomeResource.DetailsButtonTitle

                    </a>
                </td>
                <td>
                    <button onclick="ShowAlert('/Admin/Category/Delete/@ad.Id','@ad.Description')" class="btn btn-danger btn-sm">
                        @HomeResource.DeleteButtonTitle

                    </button>
                </td>
            </tr>
        }

    </tbody>
</table>
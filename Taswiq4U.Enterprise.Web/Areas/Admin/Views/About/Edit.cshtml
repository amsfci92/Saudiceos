@model Cigarette.Enterprise.ViewModels.ViewModels.About.AboutBM

@using Cigarette.Enterprise.ResourceManager.LanguagesResourceFiles
@{
    ViewBag.Title = "Edit Country Info";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}


<link href="~/Content/AdminResources/assets/pages/css/profile-2.min.css" rel="stylesheet" type="text/css" />
<link href="/Content/AdminResources/assets/global/plugins/jcrop/css/jquery.Jcrop.min.css" rel="stylesheet" type="text/css" />
<link href="/Content/AdminResources/assets/pages/css/profile.min.css" rel="stylesheet" type="text/css" />
<link href="/Content/AdminResources/assets/global/plugins/bootstrap-toastr/toastr.min.css" rel="stylesheet" type="text/css" />
<link href="/Content/AdminResources/assets/global/plugins/bootstrap-toastr/toastr.min.css" rel="stylesheet" type="text/css" />

@using (Html.BeginForm("Edit", "About", "Post"))
{
    @Html.AntiForgeryToken()

    <div class="portlet box white">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i> @HomeResource.AboutCountryEdit
            </div>
            <div class="tools">
                <button id="btn_submit" class="btn btn-primary btn-sm" type="submit"><i class="icon-check"></i> @HomeResource.AdminNewCitySubmit</button>
            </div>

        </div>
        <div class="portlet-body" style="display: block;margin-top:5px;">
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(x => x.Lock)
                @Html.HiddenFor(x => x.CountryId)

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.AboutUsArabic</label>
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.AboutAr, new { @class = "form-control", @row = "4" })
                        @Html.ValidationMessageFor(model => model.AboutAr, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.AboutUsEnglish</label>
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.AboutEn, new { @class = "form-control", @row = "4" })
                        @Html.ValidationMessageFor(model => model.AboutEn, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.admin_term_use_ar</label>
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.TermsAndConditionsAr, new { @class = "form-control", @row = "4" })
                        @Html.ValidationMessageFor(model => model.TermsAndConditionsAr, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.admin_term_use_en</label>
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.TermsAndConditionsEn, new { @class = "form-control", @row = "4" })
                        @Html.ValidationMessageFor(model => model.TermsAndConditionsEn, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.admin_privacy_policy_ar</label>
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.PrivacyPolicyAr, new { @class = "form-control", @row = "4" })
                        @Html.ValidationMessageFor(model => model.PrivacyPolicyAr, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.admin_privacy_policy_en</label>
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.PrivacyPolicyEn, new { @class = "form-control", @row = "4" })
                        @Html.ValidationMessageFor(model => model.PrivacyPolicyEn, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.admin_safty_rules_ar</label>
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.SafetyRolesAr, new { @class = "form-control", @row = "4" })
                        @Html.ValidationMessageFor(model => model.SafetyRolesAr, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.admin_safty_rules_en</label>
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.SafetyRolesEn, new { @class = "form-control", @row = "4" })
                        @Html.ValidationMessageFor(model => model.SafetyRolesEn, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.AboutusEmail</label>

                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = @HomeResource.AboutusEmail })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.AboutusPhone</label>

                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = @HomeResource.AboutusPhone })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.AboutPhone2</label>

                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Phone2, new { @class = "form-control", @placeholder = @HomeResource.AboutPhone2 })
                        @Html.ValidationMessageFor(model => model.Phone2, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.AboutusFaceboo</label>

                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.FacebookPageLink, new { @class = "form-control", @placeholder = @HomeResource.AboutusFaceboo })
                        @Html.ValidationMessageFor(model => model.FacebookPageLink, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.AboutusInstagram</label>

                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.InstagramPageLink, new { @class = "form-control", @placeholder = @HomeResource.AboutusInstagram })
                        @Html.ValidationMessageFor(model => model.InstagramPageLink, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.AboutusTwitter</label>

                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.TwiterAccountLink, new { @class = "form-control", @placeholder = @HomeResource.AboutusTwitter })
                        @Html.ValidationMessageFor(model => model.TwiterAccountLink, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.AboutGooglePlus</label>

                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.GooglePlusLink, new { @class = "form-control", @placeholder = @HomeResource.AboutGooglePlus })
                        @Html.ValidationMessageFor(model => model.GooglePlusLink, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 font-blue-hoki sbold">@HomeResource.AboutusYoutube</label>

                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.YoutubeChannelLink, new { @class = "form-control", @placeholder = @HomeResource.AboutusYoutube })
                        @Html.ValidationMessageFor(model => model.YoutubeChannelLink, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section preScripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="/Content/AdminResources/assets/global/plugins/bootstrap-toastr/toastr.min.js" type="text/javascript"></script>
}

@section postScripts
{
    <script src="~/Content/AdminResources/assets/global/plugins/moment.min.js" type="text/javascript"></script>
    <script src="/Content/AdminResources/assets/pages/scripts/ui-toastr.min.js" type="text/javascript"></script>
    <script src="https://cdn.tiny.cloud/1/6dyxlg57xtamevl339wiw7wuffu1m4emftuheprpwzx7qfwa/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
